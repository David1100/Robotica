---
import { Icon } from "astro-icon/components";
import Header from "../components/Header.astro";
const item_img = [
	{ img: "lego01" },
	{ img: "lego02" },
	{ img: "lego03" },
	{ img: "lego04" },
	{ img: "logo" },
	{ img: "lego01" },
	{ img: "lego02" },
	{ img: "lego03" },
];
