---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Capacitate</title>
	</head>
	<body>
		<div class="rain">
			{
				item_img.map((item) => (
					<div class="lego ">
						<Icon
							name={item.img}
							size={50}
							class={"text-bgPrimary/20"}
						/>
					</div>
				))
			}
		</div>
		<Header />
		<main class="relative pb-28 min-h-screen">
			<!-- Video de fondo -->
			<!-- <video
				autoplay
				muted
				loop
				playsinline
				class="absolute inset-0 w-full h-full object-cover -z-10"
			>
				<source src="/video/plexo-white.mp4" type="video/mp4" />
			</video> -->
			<div class="absolute inset-0 bg-black/90 -z-10"></div>
			<slot />
			<footer
				class="text-center w-full text-sm text-gray-400 drop-shadow-md mt-12"
			>
				Creado por <a
					href="#"
					class="text-bgPrimary hover:scale-105 transition-all"
					>David Acevedo</a
				>
			</footer>
		</main>
	</body>
</html>
