---
import { formatString } from "@/utils/functions";

const currentPath = Astro.url.pathname.slice(1);
---

<nav
    class="text-brand-gray gap-2 flex px-4 lg:px-0 mb-6 col-[1/2] lg:col-[1/3] row-[1/2] lg:row-[1/2]"
>
    <a href="/" class="transition-colors hover:underline"> Inicio </a>
    <span aria-hidden="true">/</span>
    <span
        class="text-bgPrimary text-ellipsis overflow-hidden w-[20ch] md:w-auto whitespace-nowrap"
    >
        {formatString(currentPath)}
    </span>
</nav>
