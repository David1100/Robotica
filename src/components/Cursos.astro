---
import astroLogo from "../assets/astro.svg";
---

<div class="relative rounded-lg shadow-lg overflow-hidden group shadow-bgPrimary/20">
	<img src="/images/curso.jpg" width="100%" height="100%" alt="" />
	<div
		class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/90 to-transparent p-4 text-white flex justify-between items-center opacity-0 group-hover:opacity-100 transition-opacity duration-500"
	>
		<div class="w-full">
			<span class="text-base font-bold">Introducción a la Robótica</span>
			<div class="flex justify-between">
				<div class="flex gap-1 items-center mt-2">
					<button
						class="bg-[#111c2d] hover:bg-[#1e2a44] rounded-full p-2 flex items-center justify-center transition"
					>
						<img
							src="/icons/play.svg"
							alt="Reproducir"
							class="w-2 h-2"
						/>
					</button>
					<span class="text-gray-300 text-sm">Duración: 1h 28m</span>
				</div>
				<span
					class="rounded-[10px] bg-box/40 border border-brand-gray/40
            flex items-center gap-1.5 transition
            group-hover:scale-105 group-hover:bg-box/90
            group-has-focus-visible:scale-105 group-has-focus-visible:bg-box/90
            text-xs py-1 px-2"
				>
					<img
						src="/icons/play-black.svg"
						alt="Reproducir"
						class="w-3 h-3"
					/>
					Ir al curso
				</span>
			</div>
		</div>
	</div>
</div>
